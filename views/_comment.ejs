  <a  class="delete-comment-button" href="/comments/delete/<%= comment._id %>"><i class="fa fa-close"></i></a>
  <% }else if(locals.user && locals.user.id == post.user.id){ %>
    <a class="delete-comment-button" href="/comments/delete/<%= comment._id %>"><i class="fa fa-close"></i></a>
  <% } %>
</li>