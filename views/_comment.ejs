    <img class="profile-pic" src="<%= comment.user.avatar %>"/>
  <%}else{%>
    <img class="profile-pic" src="/images/user.png"/>
  <%}%> 
  <div>
    <p><%= comment.content %></p>
    <small>by: <%= comment.user.name %></small>
  </div>
